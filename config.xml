<?xml version='1.0' encoding='utf-8'?>
<widget id="com.coolappz.WaiverApp"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Waiver App</name>
    <description>
        Project
    </description>
    <author email="ruslan" href="">
    </author>
    <content src="index.html" />
    
    <plugin name="cordova-plugin-whitelist" version="1" />
    <gap:plugin name="com.phonegap.plugins.splashscreen" />
    
    <access origin="*" />

    <gap:splash src="res/screen/splash.png"/>
        
    <icon gap:platform="android" gap:qualifier="ldpi"
    src=" res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi"
    src=" res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi"
    src=" res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi"
    src=" res/icon/android/icon-96-xhdpi.png" />
    
    <gap:splash src="res/screen/splash.png"/>
        
    <icon gap:platform="ios" gap:qualifier="ldpi"
    src=" res/icon/ios/icon-36-ldpi.png" />
    <icon gap:platform="ios" gap:qualifier="mdpi"
    src=" res/icon/ios/icon-48-mdpi.png" />
    <icon gap:platform="ios" gap:qualifier="hdpi"
    src=" res/icon/ios/icon-72-hdpi.png" />
    <icon gap:platform="ios" gap:qualifier="xhdpi"
    src=" res/icon/ios/icon-96-xhdpi.png" />
    
    <engine name="android" spec="~4.1.1" />
</widget>
