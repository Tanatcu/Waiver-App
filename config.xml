<?xml version='1.0' encoding='utf-8'?>
<widget id="com.coolappz.WaiverApp"
        version="1.0.0"
        xmlns="http://www.w3.org/ns/widgets" 
        xmlns:gap="http://cordova.apache.org//ns/1.0">
    <name>Waiver App</name>
    <description>
        Project
    </description>
    <author email="ruslan" href="">
    </author>
    <content src="index.html" />
    <access origin="*" />
