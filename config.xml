<?xml version="1.0" encoding="utf-8" standalone="no"?>

<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://cordova.apache.org//ns/1.0" id="com.coolappz.WaiverApp" version="1.0.0">
    <name>Waiver App</name>
    <description>
        Project
    </description>
    <author email="" href="" />
    <content src="index.html"/>
    <access origin="*"/>

    <uses-permission gap:name="android.permission.INTERNET" />

    <plugin name="cordova-plugin-whitelist" version="1"/>

    <gap:plugin name="org.apache.cordova.splashscreen"/>

    <preference name="phonegap-version" value="3.5.0" />

    <splash src="res/screen/splash.png"/>
    <gap:splash src="res/screen/splash.png"/>

    <platform name="android">
        <icon gap:qualifier="ldpi" src="res/icon/android/icon-36-ldpi.png"/>
        <icon gap:qualifier="mdpi" src="res/icon/android/icon-48-mdpi.png"/>
        <icon gap:qualifier="hdpi" src="res/icon/android/icon-72-hdpi.png"/>
        <icon gap:qualifier="xhdpi" src="res/icon/android/icon-96-xhdpi.png"/>
    </platform>

    <platform name="ios">
        <icon gap:platform="ios" gap:qualifier="ldpi" src="res/icon/ios/icon-36-ldpi.png"/>
        <icon gap:platform="ios" gap:qualifier="mdpi" src="res/icon/ios/icon-48-mdpi.png"/>
        <icon gap:platform="ios" gap:qualifier="hdpi" src="res/icon/ios/icon-72-hdpi.png"/>
        <icon gap:platform="ios" gap:qualifier="xhdpi" src="res/icon/ios/icon-96-xhdpi.png"/>
    </platform>
</widget>